{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"],
      "components": ["./src/components"],
      "@assets": ["./src/assets"],
      "common": ["./src/common"],
      "api": ["./src/api"],
      "screens": ["./src/screens"],
      "@navigation": ["./src/navigation"],
      "lib": ["./src/lib"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}